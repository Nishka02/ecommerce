{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next", 
      "config": { "distDir": "frontend/.next" } 
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/.next/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1"
    }
  ]
}
